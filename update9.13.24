    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: inline-block;
}

.red { background-color: #ff5f56; }
.yellow { background-color: #ffbd2e; }
.green { background-color: #27c93f; }

.title {
    font-size: 14px;
    color: #ccc;
    margin-left: 10px;
}

.terminal-body {
    background-color: #000;
    padding: 15px;
    border-radius: 0 0 10px 10px;
    overflow: auto;
}

