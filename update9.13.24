    margin-top: 10px;
}

.terminal-label {
    display: block;
    margin-bottom: 5px;
}

.terminal-select {
    background-color: #333;
    color: #00ff00;
    border: 1px solid #555;
    padding: 5px;
    font-family: 'Courier New', Courier, monospace;
    width: 100%;
}

.btn-pick-distro {
    background-color: #00ff00;
    border: none;
